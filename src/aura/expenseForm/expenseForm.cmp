<aura:component>

  <aura:attribute default="{ 'sobjectType': 'Expense__c'
                           , 'Name': ''
                           , 'Amount__c': 0
                           , 'Client__c': ''
                           , 'Date__c': ''
                           , 'Reimbursed__c': false
                           }"
                     name="newExpense"
                     type="Expense__c" />

    <aura:registerEvent name="createExpense"
                        type="c:expensesItemUpdate" />

    <div aria-labelledby="newexpenseform">
        <!-- BOXED AREA -->
        <fieldset class="slds-box slds-theme--default slds-container--small">
        <legend id="newexpenseform" class="slds-text-heading--small 
          slds-p-vertical--medium">
          Add Expense
        </legend>
  
        <!-- CREATE NEW EXPENSE FORM -->
        <form class="slds-form--stacked">          
            <lightning:input  aura:id="expenseform"
                                label="Expense Name"
                                 name="expensename"
                             required="true"
                                value="{!v.newExpense.Name}" /> 
            <lightning:input aura:id="expenseform"
                             formatter="currency"
                             label="Amount"
                             messageWhenRangeUnderflow="Enter an amount that's at least $0.10."     
                             min="0.1"
                             name="expenseamount"
                             step="0.01"
                             type="number" 
                             value="{!v.newExpense.Amount__c}" />
            <lightning:input     aura:id="expenseform"
                                   label="Client"
                                    name="expenseclient"
                             placeholder="ABC Co."
                                   value="{!v.newExpense.Client__c}" />
            <lightning:input aura:id="expenseform"
                               label="Expense Date"
                                name="expensedate"
                                type="date" 
                               value="{!v.newExpense.Date__c}" />
            <lightning:input aura:id="expenseform"
                             checked="{!v.newExpense.Reimbursed__c}"
                               label="Reimbursed?"  
                                name="expreimbursed"
                                type="checkbox" />
            <lightning:button   class="slds-m-top--medium"
                                label="Create Expense" 
                              onclick="{!c.clickCreate}"
                              variant="brand" />
        </form>
        <!-- / CREATE NEW EXPENSE FORM -->
      </fieldset>
      <!-- / BOXED AREA -->
    </div>

</aura:component>